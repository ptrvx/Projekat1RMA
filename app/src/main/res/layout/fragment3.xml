    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/t3_tv_ukupno"
        android:textSize="24sp"
        android:layout_margin="14dp"
        android:padding="6dp"
